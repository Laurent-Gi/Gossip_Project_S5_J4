<div class="container" style="padding-top: 5rem;">

<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>


<!-- Choisir !!! -->


 <h1>Editer un commentaire de potin</h1>
  <!-- On lui passe le gossip sélectionné à édité @gossip :  (  Gossip.find(params[:id])  ) -->
  <!-- # On utilise directement dans la doc de Rails   :  form_for   -->
  <!-- form_tag url_for(action: 'create'), method: "post" do  POURQUOI FAIRE UN CREATE ? -->

  <% if @comments.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à modifier le commentaire pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= form_for @comments do |f| %>

    <div class="form-group">
      <label>Contenu du Commentaire</label>
      <%= f.text_area :content, class: "form-control", size: "20x7" %>
    </div>

    <div class="form-group">
      <%= f.submit "Modifier le commentaire", :class => "btn btn-success" %>
    </div>

  <% end %>

